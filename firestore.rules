rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Usuários (Leads)
    match /users/{userId} {
      allow read, list: if true;
      allow create: if isSignedIn();
      // Permite que o usuário atualize seus próprios dados, incluindo o novo campo 'hasClickedSubscription'
      allow update: if isSignedIn() && isOwner(userId) && (
          // Garante que apenas campos permitidos sejam atualizados
          request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['name', 'email', 'lastActive', 'hasClickedSubscription', 'status', 'plan', 'endDate', 'subscriptionId'])
      );
      allow delete: if isSignedIn() && isOwner(userId);
    }
    
    // Logs de Acesso ao Site
    // Permite leitura pública para o painel e qualquer um pode escrever um log.
    match /site_access_logs/{logId} {
        allow read, list: if true;
        allow create: if true;
        allow update, delete: if false; // Logs não devem ser alterados
    }

    // Permite leitura pública das assinaturas para o painel de admin
    match /subscriptions/{subscriptionId} {
        allow read, list: if true;
        allow create, update, delete: if isSignedIn() && request.auth.uid == request.resource.data.userId;
    }

    // Regras Genéricas para o App (se houver)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
