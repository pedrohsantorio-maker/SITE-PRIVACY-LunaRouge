rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Usuários (Leads)
    // Permite leitura pública para o painel de admin, mas escrita restrita ao dono.
    match /users/{userId} {
      allow read, list: if true;
      allow create, update, delete: if isSignedIn() && isOwner(userId);
    }
    
    // Logs de Acesso ao Site
    // Permite leitura pública para o painel e qualquer um pode escrever um log.
    match /site_access_logs/{logId} {
        allow read, list: if true;
        allow create: if true;
        allow update, delete: if false; // Logs não devem ser alterados
    }

    // Permite leitura pública das assinaturas para o painel de admin
    match /subscriptions/{subscriptionId} {
        allow read, list: if true;
        allow create, update, delete: if isSignedIn() && request.auth.uid == request.resource.data.userId;
    }

    // Regras Genéricas para o App (se houver)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
